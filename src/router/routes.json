{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access dashboard",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
