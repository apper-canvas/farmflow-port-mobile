      "when": {
        "conditions": [
          {
            "label": "Reset password is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
